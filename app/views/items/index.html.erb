<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Pallet</th>
      <th>Deal code</th>
      <th>Asin</th>
      <th>Description</th>
      <th>Spreadsheet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.pallet_id %>asdasd</td>
        <td><%= item.deal_code %></td>
        <td><%= item.asin %></td>
        <td><%= item.description %></td>
        <td><%= item.spreadsheet %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

