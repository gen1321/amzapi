<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @spreadsheet.name %>
</p>

<p>
  <strong>File:</strong>
  <%= @spreadsheet.file %>
</p>
<p>
<h1>Listing Items</h1>

<table>
  <thead>
  <tr>
    <th>Pallet</th>
    <th>Asin</th>
    <th>Description</th>
    <th>Retail Price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @items.each do |item| %>
      <tr>
        <td><%=link_to item.pallet_id , "/pallet/#{item.pallet_id}"%></td>
        <td><%= item.asin %></td>
        <td><%= item.description %></td>
        <td><%= item.retail_price %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Setup Items',"#{@spreadsheet.id}/setup" %>
<%= link_to 'Edit', edit_spreadsheet_path(@spreadsheet) %> |
<%= link_to 'Back', spreadsheets_path %>
